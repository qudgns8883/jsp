	<filter>
		<filter-name>SetCharEncoding</filter-name>
		<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>SetCharEncoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!--요청명으로 서블릿을 선택하는 방법-->
	<servlet>   <!--서블릿등록-->
		<servlet-name>HelloServlet</servlet-name><!--참조할 이름-->
		<servlet-class>com.servlet.HelloServlet</servlet-class><!--패키지를 포함한 서블릿 클래스명-->
	</servlet>

	<servlet-mapping>   <!--서블릿과 요청명(요청 URL) 맵핑-->
		<servlet-name>HelloServlet</servlet-name> <!--servlet에서 사용 할 servlet과 동일한 이름 등록 -->
		<url-pattern>/12/HelloServlet.do</url-pattern><!--요청명으로 사용할 경로 입력,/로시작하는 경로 사용-->
	</servlet-mapping>
	<servlet>
		<servlet-name>DirectServletPrint</servlet-name>
		<servlet-class>com.servlet.DirectServletPrint</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DirectServletPrint</servlet-name>
		<url-pattern>/12/DirectServletPrint.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>MemberAuth</servlet-name>
		<servlet-class>com.servlet.MemberAuth</servlet-class>
		<init-param>
			<param-name>admin_id</param-name>
			<param-value>nakja</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>MemberAuth</servlet-name>
		<url-pattern>/12/MemberAuth.mvc</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>MVCBoardList</servlet-name>
		<servlet-class>com.model2.ListController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MVCBoardList</servlet-name>
		<url-pattern>/mvcboard/list.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>MVCBoardWrite</servlet-name>
		<servlet-class>com.model2.WriteController</servlet-class>
		<multipart-config>
			<max-file-size>1048576</max-file-size>
			<max-request-size>10485760</max-request-size>
		</multipart-config>
	</servlet>
	<servlet-mapping>
		<servlet-name>MVCBoardWrite</servlet-name>
		<url-pattern>/mvcboard/write.do</url-pattern>
	</servlet-mapping>
</web-app>